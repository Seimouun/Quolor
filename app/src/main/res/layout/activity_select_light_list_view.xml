<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.listview.SelectLightListView">

    <ImageView
        android:id="@+id/asllv_background_color"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/roundedbutton"
        app:tint="#1AE10000" />

    <TextView
        android:id="@+id/asllv_light_name"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/asllv_light_icon"
        app:layout_constraintEnd_toStartOf="@+id/asllv_checkbox"
        app:layout_constraintStart_toEndOf="@+id/asllv_light_icon"
        app:layout_constraintTop_toTopOf="@+id/asllv_light_icon" />

    <ImageView
        android:id="@+id/asllv_light_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/app_main_color" />

    <CheckBox
        android:id="@+id/asllv_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/asllv_light_icon"
        app:layout_constraintEnd_toEndOf="@+id/asllv_background_color"
        app:layout_constraintTop_toTopOf="@+id/asllv_light_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>